---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { Icon } from 'astro-icon/components';

import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';
import ProjectCard from '~/components/projects/ProjectCard.astro';

import { findImage } from '~/utils/images';
import { getFormattedDate } from '~/utils/utils';
import { getStaticPathsProjects, getRelatedProjects } from '~/utils/projects';
import type { ImageMetadata } from 'astro';

export const prerender = true;

export const getStaticPaths = (async () => {
  return await getStaticPathsProjects();
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { project } = Astro.props as Props;

const image = (await findImage(project.image)) as ImageMetadata | string | undefined;
const relatedProjects = await getRelatedProjects(project, 3);

const metadata = {
  title: project.title,
  description: project.description,
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    type: 'article',
    ...(image && typeof image !== 'string'
      ? { images: [{ url: image.src, width: image.width, height: image.height }] }
      : {}),
  },
};
---

<Layout metadata={metadata}>
  <section class="py-8 sm:py-16 lg:py-20 mx-auto">
    <article>
      <header>
        <div class="flex justify-between flex-col sm:flex-row max-w-3xl mx-auto mt-0 mb-2 px-4 sm:px-6 sm:items-center">
          <p class="text-muted dark:text-gray-400">
            <Icon name="tabler:calendar" class="w-4 h-4 inline-block -mt-0.5" />
            <time datetime={String(project.publishDate)} class="inline-block">
              {getFormattedDate(project.publishDate)}
            </time>
            {
              project.featured && (
                <>
                  {' '}
                  · <Icon name="tabler:star" class="w-4 h-4 inline-block -mt-0.5" />
                  <span class="inline-block">Featured</span>
                </>
              )
            }
            {
              project.caseStudy && (
                <>
                  {' '}
                  · <Icon name="tabler:file-text" class="w-4 h-4 inline-block -mt-0.5" />
                  <span class="inline-block">Case Study</span>
                </>
              )
            }
          </p>
        </div>

        <h1
          class="px-4 sm:px-6 max-w-3xl mx-auto text-4xl md:text-5xl font-bold leading-tighter tracking-tighter font-heading"
        >
          {project.title}
        </h1>

        {
          project.description && (
            <p class="max-w-3xl mx-auto mt-4 mb-8 px-4 sm:px-6 text-xl md:text-2xl text-muted dark:text-slate-400">
              {project.description}
            </p>
          )
        }

        <!-- Project Links -->
        <div class="max-w-3xl mx-auto px-4 sm:px-6 mb-8 flex gap-4">
          {
            project.link && (
              <a
                href={project.link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark transition"
              >
                <Icon name="tabler:external-link" class="w-5 h-5" />
                Visit Live Site
              </a>
            )
          }
          {
            project.github && (
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-gray-800 dark:bg-gray-700 text-white rounded-lg hover:bg-gray-900 dark:hover:bg-gray-600 transition"
              >
                <Icon name="tabler:brand-github" class="w-5 h-5" />
                View on GitHub
              </a>
            )
          }
        </div>

        {
          image && (
            <Image
              src={image}
              class="max-w-full lg:max-w-[900px] mx-auto mb-6 sm:rounded-md bg-gray-400 dark:bg-slate-700"
              widths={[400, 900]}
              sizes="(max-width: 900px) 400px, 900px"
              alt={project.title}
              width={900}
              height={506}
              loading="eager"
              decoding="async"
            />
          )
        }
      </header>

      {
        project.caseStudy && project.Content ? (
          // Full case study with markdown content
          <div class="mx-auto px-6 sm:px-6 max-w-3xl prose prose-md lg:prose-xl dark:prose-invert dark:prose-headings:text-slate-300 prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-primary dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8 prose-headings:scroll-mt-[80px] prose-li:my-0">
            <project.Content />
          </div>
        ) : (
          // Simple project view without case study
          <div class="max-w-3xl mx-auto px-4 sm:px-6">
            {project.description && (
              <div class="prose prose-lg dark:prose-invert mb-8">
                <p>{project.description}</p>
              </div>
            )}

            {!project.link && !project.github && (
              <div class="bg-gray-100 dark:bg-slate-800 rounded-lg p-6 text-center">
                <p class="text-muted dark:text-slate-400">
                  This project is part of my portfolio. For more details, please contact me.
                </p>
              </div>
            )}
          </div>
        )
      }

      <!-- Tags -->
      <div class="mx-auto px-6 sm:px-6 max-w-3xl mt-8">
        {
          project.tags && project.tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              <span class="text-muted dark:text-slate-400 font-medium">Technologies:</span>
              {project.tags.map((tag) => (
                <span class="bg-gray-100 dark:bg-slate-700 text-gray-700 dark:text-slate-300 px-3 py-1 rounded-full text-sm">
                  {tag.title}
                </span>
              ))}
            </div>
          )
        }
      </div>
    </article>

    <!-- Related Projects -->
    {
      relatedProjects.length > 0 && (
        <div class="max-w-6xl mx-auto px-4 sm:px-6 mt-16">
          <h2 class="text-2xl md:text-3xl font-bold mb-8 font-heading dark:text-slate-300">Related Projects</h2>
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {relatedProjects.map((relatedProject) => (
              <ProjectCard project={relatedProject} />
            ))}
          </div>
        </div>
      )
    }

    <!-- Back to Projects -->
    <div class="max-w-3xl mx-auto px-4 sm:px-6 mt-12">
      <a
        href="/projects"
        class="inline-flex items-center gap-2 text-primary hover:underline dark:text-blue-400"
      >
        <Icon name="tabler:arrow-left" class="w-5 h-5" />
        Back to all projects
      </a>
    </div>
  </section>
</Layout>
