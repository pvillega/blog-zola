---
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@/utils/slugify";
import { getPath } from "@/utils/getPath";
import Datetime from "./Datetime.astro";

type Props = {
  variant?: "h2" | "h3";
  hideDate?: boolean;
} & CollectionEntry<"blog">;

const { variant: Heading = "h2", id, data, filePath, hideDate } = Astro.props;

const { title, description, ...props } = data;
---

<li class="my-6">
  <a
    href={getPath(id, filePath)}
    class="group -mx-3 block rounded-lg px-3 py-2 transition-colors hover:bg-muted/30"
  >
    <Heading
      class:list={[
        "inline-block text-lg font-medium text-accent",
        "decoration-dashed underline-offset-4 group-hover:underline",
        "focus-visible:no-underline focus-visible:underline-offset-0",
      ]}
      style={{ viewTransitionName: slugifyStr(title.replaceAll(".", "-")) }}
    >
      {title}
    </Heading>
    {!hideDate && <Datetime {...props} />}
    <p>{description}</p>
  </a>
</li>
