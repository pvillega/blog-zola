---
import type { Project } from '~/types';
import Image from '~/components/common/Image.astro';
import { findImage } from '~/utils/images';

export interface Props {
  project: Project;
}

const { project } = Astro.props;
const image = await findImage(project.image);

const link = `/projects/${project.slug}`;
---

<article
  class="mb-6 transition intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
>
  <div class="relative md:h-64 bg-gray-400 dark:bg-slate-700 rounded shadow-lg mb-6">
    {
      project.featured && (
        <div class="absolute top-4 left-4 z-10">
          <span class="bg-primary text-white text-xs font-bold px-3 py-1 rounded-full">Featured</span>
        </div>
      )
    }
    {
      image && (
        <a href={link}>
          <Image
            src={image}
            class="w-full md:h-full rounded shadow-lg bg-gray-400 dark:bg-slate-700"
            widths={[400, 900]}
            width={400}
            sizes="(max-width: 900px) 400px, 900px"
            alt={project.title}
            aspectRatio="16:9"
            layout="cover"
            loading="lazy"
            decoding="async"
          />
        </a>
      )
    }
  </div>

  <div class="mb-3">
    <h3 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300">
      <a class="inline-block hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200" href={link}>
        {project.title}
      </a>
    </h3>

    {project.description && <p class="text-muted dark:text-slate-400 text-lg mb-3">{project.description}</p>}

    {
      project.tags && project.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-3">
          {project.tags.map((tag) => (
            <span class="bg-gray-100 dark:bg-slate-700 text-gray-700 dark:text-slate-300 text-sm px-2 py-1 rounded">
              {tag.title}
            </span>
          ))}
        </div>
      )
    }

    <div class="flex gap-4 items-center">
      {
        project.link && (
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary hover:underline text-sm flex items-center gap-1"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              />
            </svg>
            Live Site
          </a>
        )
      }
      {
        project.github && (
          <a
            href={project.github}
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary hover:underline text-sm flex items-center gap-1"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"
              />
            </svg>
            GitHub
          </a>
        )
      }
      {
        project.caseStudy && (
          <a
            href={link}
            class="text-sm text-muted dark:text-slate-400 hover:text-primary dark:hover:text-blue-700 flex items-center gap-1"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              />
            </svg>
            Case Study
          </a>
        )
      }
    </div>
  </div>
</article>
