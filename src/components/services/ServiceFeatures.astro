---
import { Icon } from 'astro-icon/components';

interface Props {
  includes: string[];
  title?: string;
  columns?: 1 | 2;
}

const { includes, title = "What's Included", columns = 1 } = Astro.props;

const gridClass = columns === 2 ? 'grid md:grid-cols-2 gap-x-8 gap-y-4' : 'space-y-4';
---

<div class="mb-8">
  {title && <h3 class="text-2xl font-bold mb-6 dark:text-white">{title}</h3>}

  <ul class={gridClass}>
    {
      includes.map((item) => (
        <li class="flex items-start">
          <div class="flex-shrink-0 mr-3">
            <div class="rounded-full bg-primary p-1">
              <Icon name="tabler:check" class="w-5 h-5 text-white" />
            </div>
          </div>
          <span class="text-gray-700 dark:text-slate-300 leading-relaxed">{item}</span>
        </li>
      ))
    }
  </ul>
</div>
